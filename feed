<script>
    const storyPreviewContainer = document.getElementById('storyPreviewContainer');
    const feedContainer = document.getElementById('feedContainer');
    let posts = [];
    function addPost(mediaSrc, title) {
        const postElement = document.createElement('div');
        postElement.classList.add('post');
        const img = document.createElement('img');
        img.src = mediaSrc;
        img.alt = title;
        img.onclick = () => openModal(mediaSrc);
        postElement.appendChild(img);
        const postTitle = document.createElement('h3');
        postTitle.textContent = title;
        postElement.appendChild(postTitle);
        feedContainer.appendChild(postElement);
        posts.push({ src: mediaSrc, title });
        updateStories();
    }
    function updateStories() {
        storyPreviewContainer.innerHTML = '';
        posts.slice(-5).forEach(post => {
            const img = document.createElement('img');
            img.src = post.src;
            img.alt = post.title;
            img.onclick = () => openModal(post.src);
            storyPreviewContainer.appendChild(img);
        });
    }
    function openModal(imageSrc) {
        const modal = document.createElement('div');
        modal.style.position = 'fixed';
        modal.style.top = '0';
        modal.style.left = '0';
        modal.style.width = '100%';
        modal.style.height = '100%';
        modal.style.backgroundColor = 'rgba(0, 0, 0, 0.8)';
        modal.style.display = 'flex';
        modal.style.justifyContent = 'center';
        modal.style.alignItems = 'center';
        const img = document.createElement('img');
        img.src = imageSrc;
        img.style.maxWidth = '90%';
        img.style.borderRadius = '10px';
        modal.appendChild(img);
        modal.onclick = () => document.body.removeChild(modal);
        document.body.appendChild(modal);
    }
    addPost('New F1 Livery!');
    addPost('Race Day Highlights');
</script>

<footer>
    &copy; 2025 F1 Social. All Rights Reserved.
